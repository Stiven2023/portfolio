---
import { Image } from "astro:assets";
import SectionContainer from "./SectionContainer.astro";

const PROJECTS = [
    {
        title: 'Página Web para Fundación "Lectores a la Hamaca"',
        description:
            "Colaboré en el diseño y desarrollo de la web de la fundación. UI, interactividad y optimización de rendimiento para comunicar iniciativas y conectar con su audiencia.",
        tags: ["HTML", "CSS", "JavaScript", "PHP"],
        github: "#",
        image: "/public/projects/lectores-hamaca.webp",
        link: "#",
    },
    {
        title: "Red social Cookie",
        description:
            "Trabajo en equipo: UI, funcionalidades interactivas y sistema de chats en tiempo real. Enfoque de accesibilidad para personas con discapacidades auditivas y/o visuales.",
        tags: [
            "HTML",
            "CSS",
            "JavaScript",
            "React",
            "Next.js",
            "MongoDB",
            "Node.js",
            "TypeScript",
        ],
        github: "#",
        image: "/public/projects/cookie.webp",
        link: "#",
    },
    {
        title: "VIO",
        description:
            "Solución web para gestión de pedidos, inventario y producción. Automatiza procesos críticos y mejora la eficiencia. Participé en todo el ciclo: análisis, arquitectura, desarrollo y puesta en marcha.",
        tags: ["TypeScript", "Node.js", "MongoDB", "Tailwind"],
        github: "#",
        image: "/public/projects/viomar.webp",
        link: "#",
    },
    {
        title: "E-commerce para Distribuidora de Dulces",
        description:
            "Sistema e‑commerce con pedidos, inventario, facturación y envíos. Optimiza operación comercial y logística. Proyecto freelance end‑to‑end.",
        tags: ["Next.js", "React", "Node.js", "MongoDB", "Tailwind"],
        github: "#",
        image: "/public/projects/distribuidora.webp",
        link: "#",
    },
];
---

{
    PROJECTS.map(project => (
    <article class="block w-full max-w-3xl mx-auto mb-6 p-4 sm:p-6 rounded-xl border border-white/10 bg-white/5 hover:border-cyan-500/50 transition-colors">
            <h3 class="text-white text-lg font-semibold line-clamp-2">{project.title}</h3>
            <p class="text-gray-300 text-sm mt-2">{project.description}</p>
            <ul class="mt-3 flex flex-wrap gap-2">
                {project.tags.map((tag, index) => (
                    <li class="text-xs px-2 py-1 rounded border border-white/10 bg-neutral-900/60 text-gray-200">{tag}</li>
                ))}
            </ul>
            <img class="w-full aspect-video object-cover rounded-lg mt-4 bg-neutral-900/60" loading="lazy" src={project.image} alt={`Captura de pantalla del proyecto ${project.image}`} />
        </article>
    ))
}